    "koa-helmet": "^4.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.6",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.2.7",
    "typeorm": "^0.2.15",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.11",
